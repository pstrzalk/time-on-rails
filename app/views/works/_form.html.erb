<%
  hours = work.total_time / 3600
  minutes = (work.total_time - hours * 3600) / 60
  seconds = (work.total_time - hours * 3600 - minutes * 60) % 60
%>
<%= form_with(model: work, class: "contents") do |form| %>
  <% if work.errors.any? %>
    <div id="error_explanation" data-turbo-cache="false" class="bg-gray-100 text-red-500 p-4 rounded-md mt-4">
      <ul class="list-disc ml-4">
        <% work.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :date %>
    <%= form.date_field :date, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": work.errors[:date].none?, "border-red-400 focus:outline-red-600": work.errors[:date].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_field :description, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": work.errors[:description].none?, "border-red-400 focus:outline-red-600": work.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :duration_hours %>
    <%= form.number_field :duration_hours, value: hours, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": work.errors[:description].none?, "border-red-400 focus:outline-red-600": work.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :duration_minutes %>
    <%= form.number_field :duration_minutes, value: minutes, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": work.errors[:description].none?, "border-red-400 focus:outline-red-600": work.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :duration_seconds %>
    <%= form.number_field :duration_seconds, value: seconds, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": work.errors[:description].none?, "border-red-400 focus:outline-red-600": work.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :project_id %>
    <%= form.select :project_id, @project_options, { include_blank: true }, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": work.errors[:project_id].none?, "border-red-400 focus:outline-red-600": work.errors[:project_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
