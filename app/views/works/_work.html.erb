<div id="<%= dom_id work %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Started:</strong>
    <%= work.started %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Took:</strong>
    <%= work.duration %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= work.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Project:</strong>
    <%= work.project.name if work.project_id %>
  </div>
</div>
