<div id="<%= dom_id work %>" class="w-full sm:w-auto my-5 space-y-5">
  <span class="font-bold">Project:</span> <%= work.project.name if work.project_id %><br />
  <span class="font-bold">In Progress:</span> <%= work.started? ? 'Yes' : 'No' %><br />
  <span class="font-bold">Time used:</span> <%= work.duration %><br />
  <span class="font-bold">Description:</span> <%= work.description %>
</div>
