<div class="flex justify-between items-center">
  <h1 class="font-bold text-4xl">Report for <%= @month %>/<%= @year %></h1>
</div>

<div id="works" class="min-w-full space-y-5 mt-8">
  <% if @reports.any? %>
    <% @reports.each do |work| %>
      <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
        <h2 class="font-bold text-xl"><%= work.project.name %></h2>
        <p class="text-gray-500 font-medium text-sm"><%= time_description(work.total_duration) %></p>
      </div>
    <% end %>
  <% else %>
    <p class="text-center my-10">No works found.</p>
  <% end %>
</div>
