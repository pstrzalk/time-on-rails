<% if resource.errors.any? %>
  <div id="error_explanation" data-turbo-cache="false" class="bg-gray-100 text-red-500 p-4 rounded-md">
    <ul class="list-disc ml-4">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
